<h1 class = "text-center mt-4"><%= @user.name %>'s Profile</h1>
<%= find_user_profile_image @user, size: 200 %>

<% if logged_in? && current_user == @user %>
    <div class="text-center mt-4 ">
        <%= link_to "Edit profile", edit_article_path(@user), class: "btn btn-outline-info" %>
    </div>
<% end %>
<h2 class = "text-center mt-4">Articles</h2>
<%= render 'articles/listing', obj: @user.articles %>