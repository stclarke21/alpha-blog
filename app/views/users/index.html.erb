<h1 class = "text-center mt-4">Alpha Bloggers</h1>

<div class="flickr_pagination mb-4">
    <%= will_paginate @user, :container => false %>
</div>

<div class="row row-cols-1 row-cols-sm-2 row-cols-md-4">
    <% @users.each do |user|%>
        <div class="col mb-4">
            <div class="card text-center shadow mb-5 bg-white rounded">
                <div class="card-header font-italic"><%= link_to user.name, user %></div>
                    <div class="card-body">
                        <h5 class="card-title"><%= link_to find_user_profile_image(user, size: 150), user %></h5>
                        <p class="card-text"><%= pluralize(user.articles.count, "article") %></p>
                        <%= link_to "View Profile", user, class: "btn btn-outline-success" %>
                        <%= link_to "Edit Profile", edit_article_path(user), class: "btn btn-outline-info" %>
                    </div>
                <div class="card-footer">
                    <small>
                        Created: <%= time_ago_in_words(user.created_at) %> ago, Edited: <%= time_ago_in_words(user.updated_at) %> ago
                    </small>
                </div>
            </div>
        </div>
    <%end%>
</div>

<div class="flickr_pagination mb-4">
    <%= will_paginate @user, :container => false %>
</div>  